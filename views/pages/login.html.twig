{% extends "../layout/base.html.twig" %}

{% block style %}
{% endblock %}

{% block title %}
    <title>{{ title }}</title>
{% endblock %}

{% block main %}
<main class="relative flex items-center justify-center min-h-screen bg-cover bg-center" style="background-image: url('/images/background.jpg');">
    
    <!-- Formulaire de connexion avec Glassmorphism -->
    <section class="relative bg-white/10 backdrop-blur-lg p-8 rounded-2xl shadow-lg w-full max-w-md border border-white/20">
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-white">Connexion</h2>
            <a href="/register" class="text-blue-400 hover:text-blue-300 text-sm">Pas encore inscrit ? Cr√©ez un compte</a>
        </div>

        <form action="/login" method="post" class="space-y-4">
            <!-- Champ Email -->
            <div>
                <label for="email" class="block text-gray-300">Mail</label>
                <input id="email" type="email" name="email" class="w-full p-3 rounded-lg bg-white/20 text-white border border-white/30 focus:ring-2 focus:ring-blue-500 focus:outline-none">
                {% if error.email %}
                    <p class="text-red-400 text-sm">{{ error.email }}</p>
                {% endif %}
            </div>

            <!-- Champ Mot de passe -->
            <div>
                <label for="password" class="block text-gray-300">Mot de Passe</label>
                <input id="password" type="password" name="password" class="w-full p-3 rounded-lg bg-white/20 text-white border border-white/30 focus:ring-2 focus:ring-blue-500 focus:outline-none">
                {% if error.password %}
                    <p class="text-red-400 text-sm">{{ error.password }}</p>
                {% endif %}
            </div>

            <!-- Bouton de connexion -->
            <div>
                <button type="submit" class="w-full bg-black text-white p-3 rounded-lg hover:bg-blue-500 transition">Se connecter</button>
            </div>
        </form>
    </section>
</main>
{% endblock %}
